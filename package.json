{
  "name": "managed-ad-cdk",
  "version": "1.0.0",
  "description": "AWS CDK solution for automated AWS Managed Microsoft AD with QuickSight Enterprise integration",
  "main": "dist/bin/app.js",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "synth": "cdk synth",
    "deploy": "cdk deploy --all",
    "postbuild": "mkdir -p dist/lib/scripts && cp -r lib/scripts/* dist/lib/scripts/"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.130.0",
    "constructs": "^10.0.0",
    "esbuild": "^0.20.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "aws-cdk": "^2.130.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "~5.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": ["<rootDir>/test"],
    "testMatch": ["**/*.test.ts"],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": ["lib/**/*.ts", "!lib/lambda/**"],
    "coverageThreshold": {
      "global": { "lines": 70 }
    }
  }
}
